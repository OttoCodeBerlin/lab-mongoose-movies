<div class="container">
  <form action="/movies/{{movie._id}}" method="post">
    {{!-- id is the query parameter (req.query....) --}}
    <div class="form-group">
      <label for="title">Title</label>
      <input value="{{movie.title}}" class="form-control" type="text" name="title" id="title">
    </div>
    <div class="form-group">
      <label for="genre">Genre</label>
      <input value="{{movie.genre}}" class="form-control" type="text" name="genre" id="genre">
    </div>
    <div class="form-group">
      <label for="plot">Plot</label>
      <input value="{{movie.plot}}" class="form-control" type="text" name="plot" id="plot">
    </div>
    <input type="submit" value="Update" class="btn btn-primary">
  </form>
  <a href="/movies/index">
    <button class="btn btn-secondary">Go back</button>
  </a>
</div>